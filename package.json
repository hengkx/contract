{
  "name": "contracts",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "deploy": "hardhat --network mumbai run ./scripts/deploy.ts",
    "deployNFT": "hardhat run ./scripts/deployNFT.ts",
    "deployProxy": "hardhat run ./scripts/deployProxy.ts",
    "mint": "hardhat run ./scripts/mint.ts",
    "trade": "hardhat run ./scripts/trade.ts",
    "test": "hardhat --network ganache test test/local/*",
    "testOnline": "hardhat --network rinkeby test test/online",
    "testLog": "hardhat --network hardhat test test/local/*",
    "verify": "hardhat --network polygon run ./scripts/verify.ts"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.6.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-ganache": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.36",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.8",
    "hardhat": "^2.9.6",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  }
}
